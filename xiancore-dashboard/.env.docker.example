# ===========================================
# XianCore Dashboard Docker Environment
# ===========================================
# Copy this file to .env and update the values

# MySQL Configuration
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=xiancore
MYSQL_USER=securityuser
MYSQL_PASSWORD=security123
MYSQL_PORT=3306

# Backend Configuration
BACKEND_PORT=8400
NODE_ENV=production

# Frontend Configuration
FRONTEND_PORT=80

# CORS Configuration
# Set this to your frontend URL in production
CORS_ORIGIN=http://localhost

# MythicMobs Configuration (Optional)
# Path to MythicMobs Mobs directory on the host machine
# Example: /path/to/minecraft/server/plugins/MythicMobs/Mobs
MYTHICMOBS_MOBS_PATH=

# Timezone
TZ=Asia/Shanghai
